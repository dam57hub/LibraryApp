@model IEnumerable<LibraryApp.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Authors</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.ISBN</td>
                <td>
                    @(item.Author?.Name ?? "No Author")
                </td>
                <td>
                    @(item.Borrowings != null && item.Borrowings.Any(b => b.ReturnDate == null) 
                        ? "Borrowed" 
                        : "Available")
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-sm btn-danger">Delete</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table> 