@model LibraryApp.Models.Author

@{
    ViewData["Title"] = "Delete Author";
}

<h1>Delete Author</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this author?</h3>
    <p>This action cannot be undone.</p>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Books Count
        </dt>
        <dd class="col-sm-10">
            @Model.Books.Count
        </dd>
    </dl>

    @if (Model.Books.Any())
    {
        <div class="alert alert-warning">
            <p>Warning: This author has @Model.Books.Count associated books. You must delete or reassign these books before deleting the author.</p>
        </div>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="AuthorId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 