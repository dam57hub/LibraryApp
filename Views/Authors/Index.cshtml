@model IEnumerable<LibraryApp.Models.Author>

@{
    ViewData["Title"] = "Authors";
}

<h1>Authors</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Number of Books</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Books.Count</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AuthorId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.AuthorId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table> 