@model IEnumerable<LibraryApp.Models.Author>

@{
    ViewData["Title"] = "Authors";
}

<h1>Authors</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th><i class="bi bi-person"></i> Name</th>
            <th><i class="bi bi-book"></i> Books Count</th>
            @if (User.IsInRole("Admin"))
            {
                <th><i class="bi bi-gear"></i> Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Books?.Count</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.AuthorId">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.AuthorId">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table> 